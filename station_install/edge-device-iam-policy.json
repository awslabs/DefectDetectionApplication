{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "GreengrassComponentDownload",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:GetObjectVersion"
      ],
      "Resource": [
        "arn:aws:s3:::dda-component-*/*",
        "arn:aws:s3:::greengrass-component-artifacts-*/*"
      ]
    },
    {
      "Sid": "CloudWatchLogsUpload",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:DescribeLogStreams"
      ],
      "Resource": "arn:aws:logs:*:*:log-group:/aws/greengrass/*"
    },
    {
      "Sid": "AssumeDataAccountRole",
      "Effect": "Allow",
      "Action": "sts:AssumeRole",
      "Resource": "arn:aws:iam::*:role/dda-cross-account-role"
    },
    {
      "Sid": "IoTDataPlane",
      "Effect": "Allow",
      "Action": [
        "iot:Connect",
        "iot:Publish",
        "iot:Subscribe",
        "iot:Receive"
      ],
      "Resource": "*"
    },
    {
      "Sid": "GreengrassConnectivity",
      "Effect": "Allow",
      "Action": [
        "greengrass:GetDeploymentStatus",
        "greengrass:GetConnectivityInfo"
      ],
      "Resource": "*"
    }
  ]
}
