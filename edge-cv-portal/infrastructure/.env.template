# AWS Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# AWS Account Configuration
# =============================================================================
AWS_REGION=us-east-1
AWS_PROFILE=default

# Your AWS Account ID (12 digits)
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# =============================================================================
# Cognito/SSO Configuration
# =============================================================================
# Set to true to enable SSO integration
SSO_ENABLED=false

# SSO Identity Provider Configuration (only if SSO_ENABLED=true)
SSO_METADATA_URL=https://your-idp.com/metadata.xml
SSO_PROVIDER_NAME=YourCompanySSO

# Cognito Domain Prefix (must be globally unique)
COGNITO_DOMAIN_PREFIX=dda-portal-your-company

# =============================================================================
# Portal Environment Configuration
# =============================================================================
PORTAL_ENVIRONMENT=dev
PORTAL_STAGE=development

# =============================================================================
# Cross-Account Configuration
# =============================================================================
# Use Case Account (where edge devices and data reside)
USECASE_ACCOUNT_ID=987654321098
USECASE_ROLE_NAME=PortalAccessRole
USECASE_EXTERNAL_ID=unique-external-id-123

# Labeling Account (for SageMaker Ground Truth)
LABELING_ACCOUNT_ID=555666777888
LABELING_ROLE_NAME=LabelingPortalRole

# =============================================================================
# Optional Configuration
# =============================================================================
# Custom KMS Key ID for encryption (optional)
# KMS_KEY_ID=your-kms-key-arn-here

# SNS Topic for alerts (optional)
# ALERT_SNS_TOPIC_ARN=arn:aws:sns:us-east-1:123456789012:dda-portal-alerts

# Custom S3 bucket prefix (optional)
# S3_BUCKET_PREFIX=dda-portal-your-company

# =============================================================================
# Development/Testing Configuration
# =============================================================================
# Set to true for development mode (enables additional logging, etc.)
DEBUG_MODE=false

# Skip certain validations for testing (not recommended for production)
SKIP_VALIDATIONS=false